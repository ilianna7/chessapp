<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Larger red circle in back -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/fire_hydrant"/>
            <size
                android:width="@dimen/logoOuterWidth"
                android:height="@dimen/logoOuterHeight"/>
        </shape>
    </item>
    <!-- Smaller white circle in front -->
    <item>
        <shape android:shape="oval">
            <!-- transparent stroke = larger_circle_size - smaller_circle_size -->
            <stroke android:color="@android:color/transparent"
                android:width="@dimen/logoInnerStrokeWidth"/>
            <solid android:color="@color/white"/>
            <size
                android:width="@dimen/logoInnerWidth"
                android:height="@dimen/logoInnerHeight"/>
        </shape>
    </item>
</layer-list>